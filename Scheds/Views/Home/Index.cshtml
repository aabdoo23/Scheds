@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheds - University Schedule Generator</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <a href="#">
            <img src="~/images/logo.png" alt="Scheds Logo" class="logo-img">
        </a>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/GenerateSchedules">Generate Schedules</a></li>
            <li><a href="/FindStudyRooms">Find Study Rooms</a></li>
        </ul>
    </nav>

    <!-- Hero Section with Animation -->
    <section class="hero">
        <div class="hero-content">
            <h1>Generate Your University Schedule</h1>
            <p>Fast, Easy, and Efficient Scheduling for University Students</p>
            <a href="#" class="cta-button">Get Started</a>
        </div>
        <div class="scroll-down">Scroll down for more</div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="feature" id="feature-1">
            <img src="~/images/schedules.png" alt="Schedule">
            <h2>Schedule Generator</h2>
            <p>Create a personalized schedule in just a few clicks.</p>
        </div>
        <div class="feature" id="feature-2">
            <img src="~/images/studyRooms.png" alt="Empty Room Finder">
            <h2>Empty Room Finder</h2>
            <p>Find available rooms for study sessions or group projects.</p>
        </div>
        <div class="feature" id="feature-3">
            <img src="~/images/register.png" alt="Course Registration">
            <h2>Register Courses</h2>
            <p>Seamless course registration to help you get the classes you need.</p>
        </div>
    </section>

    <script src="~/js/script.js"></script>
</body>
</html>
