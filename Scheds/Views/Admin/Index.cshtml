@model Scheds.Domain.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6"><i class="fas fa-tachometer-alt text-primary"></i> Analytics Dashboard</h1>
                    <p class="text-muted">Real-time insights into schedule generation usage</p>
                </div>
                <div>
                    <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.UsageStatistics["Total Generations"]</h3>
                            <p class="mb-0 small">Total Generations</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.MonthlyStats.CurrentMonthGenerations</h3>
                            <p class="mb-0 small">This Month</p>
                            @if (Model.MonthlyStats.GrowthPercentage >= 0)
                            {
                                <small class="text-light"><i class="fas fa-arrow-up"></i> +@Model.MonthlyStats.GrowthPercentage%</small>
                            }
                            else
                            {
                                <small class="text-light"><i class="fas fa-arrow-down"></i> @Model.MonthlyStats.GrowthPercentage%</small>
                            }
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.MonthlyStats.CurrentMonthSchedules</h3>
                            <p class="mb-0 small">Schedules Generated</p>
                            <small class="text-light">Avg: @Model.MonthlyStats.AverageSchedulesPerGeneration</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-list fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.UsageStatistics["Live Data Usage"]</h3>
                            <p class="mb-0 small">Live Data Used</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-wifi fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-secondary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.UsageStatistics["Engineering Students"]</h3>
                            <p class="mb-0 small">Engineering</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cog fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-gradient-dark text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="fw-bold">@Model.UsageStatistics["Custom Courses Used"]</h3>
                            <p class="mb-0 small">Custom Courses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-sliders-h fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Analytics -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-chart-area text-primary"></i> Daily Activity (Last 7 Days)</h5>
                </div>
                <div class="card-body">
                    <canvas id="dailyChart" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-history text-success"></i> Recent Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                        @if (Model.RecentGenerations.Any())
                        {
                            @foreach (var generation in Model.RecentGenerations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <a href="@Url.Action("GenerationDetails", "Admin", new { id = generation.Id })" class="text-decoration-none">
                                                Generation #@generation.Id
                                            </a>
                                        </h6>
                                        <small class="text-muted">@generation.GeneratedAt.ToString("HH:mm")</small>
                                    </div>
                                    <p class="mb-1 small">
                                        @generation.NumberOfSchedulesGenerated schedules, @generation.TotalCourses courses
                                    </p>
                                    <div>
                                        @if (generation.UsedLiveData)
                                        {
                                            <span class="badge bg-success rounded-pill">Live Data</span>
                                        }
                                        @if (generation.IsEngineering)
                                        {
                                            <span class="badge bg-warning rounded-pill">Engineering</span>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-3 text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>No recent activity</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular Courses and Customizations -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-star text-warning"></i> Most Selected Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.MostSelectedCourses.Any())
                    {
                        <div class="row">
                            @foreach (var course in Model.MostSelectedCourses.Take(8))
                            {
                                <div class="col-md-6 mb-2">
                                    <div class="bg-light p-2 rounded">
                                        <small class="fw-bold">@course</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No data available</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-tools text-info"></i> Popular Customizations</h5>
                </div>
                <div class="card-body">
                    @if (Model.MostSelectedCustomizations.Any())
                    {
                        @foreach (var customization in Model.MostSelectedCustomizations.Take(6))
                        {
                            <div class="mb-2">
                                <span class="badge bg-primary rounded-pill">@customization</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">No customizations data</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-tools text-secondary"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Analytics", "Admin")" class="btn btn-outline-primary w-100">
                                <i class="fas fa-chart-bar"></i> Detailed Analytics
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("GenerationHistory", "Admin")" class="btn btn-outline-success w-100">
                                <i class="fas fa-history"></i> Full History
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button class="btn btn-outline-info w-100" onclick="location.reload()">
                                <i class="fas fa-sync-alt"></i> Refresh Data
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-danger w-100">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary { background: linear-gradient(45deg, #007bff, #0056b3); }
    .bg-gradient-success { background: linear-gradient(45deg, #28a745, #1e7e34); }
    .bg-gradient-info { background: linear-gradient(45deg, #17a2b8, #117a8b); }
    .bg-gradient-warning { background: linear-gradient(45deg, #ffc107, #e0a800); }
    .bg-gradient-secondary { background: linear-gradient(45deg, #6c757d, #545b62); }
    .bg-gradient-dark { background: linear-gradient(45deg, #343a40, #23272b); }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Daily Activity Chart
    const ctx = document.getElementById('dailyChart').getContext('2d');
    const chartLabels = [
        @foreach (var stat in Model.DailyStats.Select((d, i) => new { Data = d, Index = i }))
        {
            @if (stat.Index > 0) { <text>,</text> }
            <text>'@stat.Data.Date.ToString("MM/dd")'</text>
        }
    ];
    
    const generationsData = [
        @foreach (var stat in Model.DailyStats.Select((d, i) => new { Data = d, Index = i }))
        {
            @if (stat.Index > 0) { <text>,</text> }
            @stat.Data.Count
        }
    ];
    
    const schedulesData = [
        @foreach (var stat in Model.DailyStats.Select((d, i) => new { Data = d, Index = i }))
        {
            @if (stat.Index > 0) { <text>,</text> }
            @stat.Data.TotalSchedulesGenerated
        }
    ];

    const dailyChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: chartLabels,
            datasets: [{
                label: 'Generations',
                data: generationsData,
                borderColor: '#007bff',
                backgroundColor: 'rgba(0, 123, 255, 0.1)',
                tension: 0.4,
                fill: true
            }, {
                label: 'Schedules',
                data: schedulesData,
                borderColor: '#28a745',
                backgroundColor: 'rgba(40, 167, 69, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
