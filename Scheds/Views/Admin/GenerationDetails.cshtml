@model Scheds.Domain.Entities.ScheduleGeneration
@{
    ViewData["Title"] = "Generation Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Schedule Generation Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("GenerationHistory", "Admin")">History</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details #@Model.Id</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Generation Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">Generated At:</dt>
                        <dd class="col-sm-8">@Model.GeneratedAt.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>
                        
                        <dt class="col-sm-4">Schedules Generated:</dt>
                        <dd class="col-sm-8">@Model.NumberOfSchedulesGenerated</dd>
                        
                        <dt class="col-sm-4">Used Live Data:</dt>
                        <dd class="col-sm-8">
                            @if (Model.UsedLiveData)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Engineering Student:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsEngineering)
                            {
                                <span class="badge bg-warning">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Zero Seats Considered:</dt>
                        <dd class="col-sm-8">
                            @if (Model.ConsideredZeroSeats)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Schedule Preferences</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Min Items Per Day:</dt>
                        <dd class="col-sm-7">@Model.MinimumNumberOfItemsPerDay</dd>
                        
                        <dt class="col-sm-5">Largest Allowed Gap:</dt>
                        <dd class="col-sm-7">@Model.LargestAllowedGap minutes</dd>
                        
                        <dt class="col-sm-5">Number of Days:</dt>
                        <dd class="col-sm-7">@Model.NumberOfDays</dd>
                        
                        <dt class="col-sm-5">Days Selected:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsNumberOfDaysSelected)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-5">Time Range:</dt>
                        <dd class="col-sm-7">@Model.DaysStart - @Model.DaysEnd</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Selected Courses (@Model.SelectedCourses.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.SelectedCourses.Any())
                    {
                        <ul class="list-group">
                            @foreach (var course in Model.SelectedCourses)
                            {
                                <li class="list-group-item">
                                    <strong>@course.CourseCode</strong>
                                    @if (!string.IsNullOrEmpty(course.CourseName))
                                    {
                                        <br><small class="text-muted">@course.CourseName</small>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No regular courses selected</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Custom Courses (@Model.SelectedCustomCourses.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.SelectedCustomCourses.Any())
                    {
                        @foreach (var customCourse in Model.SelectedCustomCourses)
                        {
                            <div class="card mb-2">
                                <div class="card-body p-2">
                                    <h6 class="card-title">@customCourse.CourseCode</h6>
                                    @if (!string.IsNullOrEmpty(customCourse.CourseName))
                                    {
                                        <p class="card-text"><small>@customCourse.CourseName</small></p>
                                    }
                                    @if (!string.IsNullOrEmpty(customCourse.CustomProfessor))
                                    {
                                        <span class="badge bg-primary">Prof: @customCourse.CustomProfessor</span>
                                    }
                                    @if (!string.IsNullOrEmpty(customCourse.CustomTA))
                                    {
                                        <span class="badge bg-success">TA: @customCourse.CustomTA</span>
                                    }
                                    @if (!string.IsNullOrEmpty(customCourse.CustomMainSection))
                                    {
                                        <span class="badge bg-warning">Main Sec: @customCourse.CustomMainSection</span>
                                    }
                                    @if (!string.IsNullOrEmpty(customCourse.CustomSubSection))
                                    {
                                        <span class="badge bg-info">Sub Sec: @customCourse.CustomSubSection</span>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No custom courses selected</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ClientIpAddress) || !string.IsNullOrEmpty(Model.UserAgent))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Technical Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            @if (!string.IsNullOrEmpty(Model.ClientIpAddress))
                            {
                                <dt class="col-sm-2">IP Address:</dt>
                                <dd class="col-sm-10">@Model.ClientIpAddress</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserAgent))
                            {
                                <dt class="col-sm-2">User Agent:</dt>
                                <dd class="col-sm-10"><code>@Model.UserAgent</code></dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
