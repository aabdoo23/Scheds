@model IEnumerable<Scheds.Domain.Entities.ScheduleGeneration>
@{
    ViewData["Title"] = "Generation History";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Schedule Generation History</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Generation History</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">All Schedule Generations</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Generated At</th>
                                        <th>Schedules Count</th>
                                        <th>Courses</th>
                                        <th>Custom Courses</th>
                                        <th>Live Data</th>
                                        <th>Engineering</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var generation in Model)
                                    {
                                        <tr>
                                            <td>@generation.Id</td>
                                            <td>@generation.GeneratedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>@generation.NumberOfSchedulesGenerated</td>
                                            <td>@generation.SelectedCourses.Count</td>
                                            <td>@generation.SelectedCustomCourses.Count</td>
                                            <td>
                                                @if (generation.UsedLiveData)
                                                {
                                                    <span class="badge bg-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (generation.IsEngineering)
                                                {
                                                    <span class="badge bg-warning">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("GenerationDetails", "Admin", new { id = generation.Id })" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No schedule generations found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
