@using Microsoft.AspNetCore.Authentication

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <div class="auth-container">
        <span class="auth-username">Hello, @User.Identity.Name</span>
        <form method="post" asp-controller="Account" asp-action="Logout" class="auth-logout-form">
            <button type="submit" class="auth-btn auth-logout">Logout</button>
        </form>
    </div>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="auth-btn auth-login auth-highlight"
        title="Sign in with Google">Sign in with Google</a>
}

<style>
    .auth-logout {
        background-color: #dc3545;
        color: #fff;
        border: 0;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 160ms ease, transform 160ms ease;
    }

    .auth-logout:hover {
        background-color: #c82333;
        transform: translateY(-1px);
    }

    .auth-highlight {
        background-color: #2b6fd8;
        color: #fff;
        border: 0;
        padding: 6px 12px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        box-shadow: 0 8px 20px rgba(43, 111, 216, 0.18);
        transition: transform 160ms ease, box-shadow 160ms ease;
        cursor: pointer;
        animation: pulse 2.2s infinite;
        line-height: 1;
    }

    @@keyframes pulse {
        0% {
            transform: translateY(0);
            box-shadow: 0 8px 20px rgba(43, 111, 216, 0.18);
        }

        50% {
            transform: translateY(-3px);
            box-shadow: 0 12px 26px rgba(43, 111, 216, 0.22);
        }

        100% {
            transform: translateY(0);
            box-shadow: 0 8px 20px rgba(43, 111, 216, 0.18);
        }
    }
</style>