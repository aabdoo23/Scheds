@using Scheds.Models
@model ReturnedCardItem

<head>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
  <div class="cardm">
    <div class="card">
      <div class="main">@Model.courseCode: @Model.courseName</div>
      <div class="mainsmall" style="display: none;"><div>@Model.courseCode</div></div>
      <div class="mainsub">
        @Model.instructorName

      </div>
    </div>
    <div class="mainsubsmall" style="display: none;">
      @Model.subType-@Model.section
    </div>
    <div class="card2">
      <div class="upper">
        <div class="instructor">
          Seats Left: @Model.seatsLeft

        </div>

        <div class="credits">
          <div class="creditstext">Credits: @Model.credits CH</div>

        </div>
      </div>

      <div class="lower">
        <div class="schedule-text">
          <i class="fa-regular fa-clock"></i>
          <div class="scheduletext">@Model.day,<br> @Model.startTime.ToString(@"hh\:mm") -
            @Model.endTime.ToString(@"hh\:mm")</div>
        </div>
        <div class="room">
          <div class="roomtext">Room: @Model.room</div>
        </div>

        <div class="card3">
          <p class="seatstext">
            @Model.subType - @Model.section
          </p>
        </div>
      </div>
    </div>
  </div>
